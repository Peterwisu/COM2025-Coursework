%head
  
  %meta{:charset => "utf-8"}/
  %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
  %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"}
  %script{:src => "https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"}

%nav.navbar.navbar-inverse
  .container-fluid
    .navbar-header
      %button.navbar-toggle{"data-target" => "#myNavbar", "data-toggle" => "collapse", :type => "button"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "/",style: "color: white;"} SUBCULTURE MUSIC
    #myNavbar.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-left
        %li.navbarheader
          %a{:href => "artists",style: "color: white;"} Artists      
        %li.navbarheader
          %a{:href => "songs",style: "color: white;"} Songs
        %li.navbarheader
          %a{:href => "playlists",style: "color: white;"} Playlists
        %li.navbarheader
          %a{:href => "contact",style: "color: white;"} Contact
    
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li.navbarheader
            %h4{style: " padding-top: 5px  "}="#{current_user.email}" 
          %li.navbarheader  
            %a{:href => edit_user_registration_path,style: "color: white;"}Profile  
          %li.navbarheader
            = link_to t('logout'), destroy_user_session_path, method: 'delete',style: "color: white;"
        - else
          %li.navbarheader
            %a{:href => new_user_session_path,style: "color: white;"} Login
          %li.navbarheader
            %a{:href => new_user_registration_path,style: "color: white;"}Sign Up
  




