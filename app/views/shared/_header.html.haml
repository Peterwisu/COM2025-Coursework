  %script{:src => "https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"}

%nav.navbar.navbar-inverse
  .container-fluid
    .navbar-header
      %button.navbar-toggle{"data-target" => "#myNavbar", "data-toggle" => "collapse", :type => "button"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "/",style: "color: white;"} SUBCULTURE MUSIC
    #myNavbar.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        %li.navbarheader
          %a{:href => "artist",style: "color: white;"} Artists      
        %li.navbarheader
          %a{:href => "song",style: "color: white;"} Songs
        %li.navbarheader
          %a{:href => "playlist",style: "color: white;"} Playlists
        %li.navbarheader
          %a{:href => "contact",style: "color: white;"} Contact



%nav
- if user_signed_in?
  = "#{current_user.email} |"
  = link_to t('profile'), edit_user_registration_path
  = '|'
  = link_to t('logout'), destroy_user_session_path, method: 'delete'
- else
  = link_to t('login'), new_user_session_path
  = '|'
  = link_to t('sign_up'), new_user_registration_path

- flash.each do |key, value|
  = content_tag :div, content_tag(:p, value), id: "#{key}" unless value.blank?

