.container.bg-light
  .col-md-12.text-center
    .jumbotron.text-center
      %h1
        = t('.title')
      %p
        = t('.description')
.container
  .col-md-10.text-center
    = form_tag request_contact_path, method: 'post',  :class => "form-horizontal center" ,:id => "contact_form" do |f|
      .form-group
        = label_tag :name, t('.name'), class: "col-md-4 control-label"
        .col-md-8
          %p.name_require
          = text_field_tag :name, '',  placeholder: t('.enter_name'), size: 50, class: "form-control"
      .form-group
        %br/
      .form-group
        = label_tag :email, t('.email'), class: "col-md-4 control-label"
        .col-md-8
          = email_field_tag :email, '',  placeholder: t('.enter_email'), class: "form-control"
      .form-group
        %br/
      .form-group
        = label_tag :telephone, t('.telephone'), class: "col-md-4 control-label"
        .col-md-8
          = telephone_field_tag :telephone, '',  placeholder: t('.enter_telephone'), class: "form-control"
      .form-group
        %br/
      .form-group
        = label_tag :message, t('.message'), class: "col-md-4 control-label"
        .col-md-8
          = text_field_tag :message, '',  placeholder: t('.enter_message'), size: 100,class: "form-control"
      .container.bg-light
        .col-md-11.text-center
          = submit_tag t('.submit'),id:"contact_submit", class: "btn btn-default btn-primary" ,style: " border: none; background-color: #000000 ; color: #FFFFFF;"
:javascript
  $(document).ready(function() {
    validatecontact();
  })
