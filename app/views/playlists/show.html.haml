
.container.bg-light
  .col-md-12.text-center
    %p
      
      %h1= @playlist.name
    %p
      %b Created by:
      = @playlist.created_by


.container.bg-light
  .col-md-12.text-left
    %h4{style: "text-align: left;"} Songs:
    %table.table.table-dark
      %thead
        %tr
          %th Artist
          %th Name
          %th Album
          %th Duration
          %th
          
          
      //display a songs that belongs to a playlist
      %tbody
        //run loop through all list_songs
        - @playlist.list_song.each do |list|
          //run loop through all songs
          - @songs.each  do |song| 
            //check if song id from list_songs is same from song
            - if list.song_id == song.id
              %tr
                %td= song.artist.name
                %td= song.name
                %td= song.album
                %td= song.duration
                %td= link_to 'Remove Song from Playlist', list, method: :delete, data: { confirm: 'Are you sure?' },id: 'linkcolorwhite'


