= form_for @list_song do |f|
  - if @list_song.errors.any?
    #error_explanation
      %h2= "#{pluralize(@list_song.errors.count, "error")} prohibited this list_song from being saved:"
      %ul
        - @list_song.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :playlist
    
    = f.text_field :playlist
  .field
    = f.label :song
    = f.text_field :song
  .actions
    = f.submit 'Save'
