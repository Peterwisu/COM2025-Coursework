<div class="container bg-light">
  <div class="col-md-12 text-center">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
  </div>
</div>
<div class="container bg-light">
  <div class="col-md-12 text-center">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put },:html => {:class => "form-horizontal center"}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field" class="form-group"> 
        <%= f.label :email , class: "col-xl-4 control-label"%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field" class="form-group">
        <%= f.label :password , class: "col-xl-4 control-label"%> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field" class="form-group">
        <%= f.label :password_confirmation , class: "col-xl-4 control-label"%><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field" class="form-group">
        <%= f.label :current_password , class: "col-xl-4 control-label"%> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="actions" class="container bg-light">
        <div class="col-xl-6 text-center">
          <%= f.submit "Update", class: "btn btn-default btn-primary" ,style: " border: none; background-color: #000000 ; color: #FFFFFF;" %>
        </div>
      </div>
    <% end %>
  </div>
</div> 
<div class="container bg-light">
  <div class="col-md-12 text-center">
    <h3>Cancel my account</h3>
 
    <p>Unhappy?  
    <div class="actions" class="container bg-light">
      <div class="col-xl-6 text-center">
        <%= button_to "Cancel my account", registration_path(resource_name), class: "btn btn-default btn-primary" ,style: " border: none; background-color: #000000 ; color: #FFFFFF;", data: { confirm: "Are you sure?" }, method: :delete %></p>
        <%= link_to "Back", :back , class: "btn btn-default btn-primary" ,style: " border: none; background-color: #000000 ; color: #FFFFFF;"%>

      </div>
    </div> 
  </div>
</div> 
