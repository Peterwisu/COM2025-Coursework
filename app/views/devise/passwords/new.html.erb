<div class="container bg-light">
  <div class="col-md-12 text-center">
    <h2>Forgot your password?</h2>
  </div>
</div>
<div class="container bg-light">
  <div class="col-md-12 text-center">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post },:html => {:class => "form-horizontal center"}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field" class="form-group">
        <%= f.label :email, class: "col-xl-4 control-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      
      <div class="actions" class="container bg-light">
        <div class="col-xl-6 text-center">
          <%= f.submit "Send me reset password instructions" , class: "btn btn-default btn-primary" ,style: " border: none; background-color: #000000 ; color: #FFFFFF;"%>
      </div>
    <% end %>
  </div>
</div>
<div class="actions" class="container bg-light">
  <div class="col-xl-6 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
