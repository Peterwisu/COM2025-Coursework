<div class="container bg-light">
  <div class="col-md-12 text-center">
    <h2>Log in</h2>
 </div>
</div>
<div class="container bg-light">
  <div class="col-md-12 text-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name),:html => {:class => "form-horizontal center"}) do |f| %>
      <div class="field" class="form-group">
        <%= f.label :email, class: "col-xl-4 control-label" %><br />
        <div class="col-xl-3">
          <%= f.email_field :email,placeholder:"Enter Your Email", autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>
      <div class="field" class="form-group">
        <%= f.label :password, class: "col-xl-4 control-label" %> <br />
        <div class="col-xl-3">
          <%= f.password_field :password, placeholder:"Enter Your Password",autocomplete: "current-password", class: "form-control" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field" class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "col-xl-4 control-label" %>
        </div>
      <% end %>

      
      <div class="actions" class="container bg-light">
        <div class="col-xl-6 text-center">
          <%= f.submit "Log in" , class: "btn btn-default btn-primary" ,style: " border: none; background-color: #000000 ; color: #FFFFFF;"%>
        </div>
      </div>
    <% end %>
 </div>
</div>
<div class="actions" class="container bg-light">
  <div class="col-xl-6 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>


