= form_for @song do |f|
  - if @song.errors.any?
    #error_explanation
      %h2= "#{pluralize(@song.errors.count, "error")} prohibited this song from being saved:"
      %ul
        - @song.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :artist
    %p= @song.artist.name
    = f.hidden_field :artist_id, value: @song.artist.id 
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :album
    = f.text_field :album
  .field
    = f.label :duration
    = f.text_field :duration
  .actions
    = f.submit 'Save'
