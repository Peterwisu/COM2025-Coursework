

= form_for  @song, :html => {:class => "form-horizontal center"} do |f|
  - if  @song.errors.any?
    #error_explanation
      %h2= "#{pluralize( @song.errors.count, "error")} prohibited this song from being saved:"
      %ul
        -  @song.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.label :artist, "Artist Name:", class: "col-md-4 control-label"
    .col-md-3
      %h4= @song.artist.name
      = f.hidden_field :artist_id, value: @song.artist.id, class: "form-control" 
  .form-group
    = f.label :name, "Name:", class: "col-md-4 control-label"
    .col-md-3
      = f.text_field :name, class: "form-control"
  .form-group
    = f.label :album, "Album:", class: "col-md-4 control-label"
    .col-md-3
      = f.text_field :album, class: "form-control"
  .form-group
    = f.label :duration, "Duration:", class: "col-md-4 control-label"
    .col-md-3
      = f.text_field :duration, class: "form-control"
  
  .container.bg-light
    .col-md-6.text-center
      = f.submit "Save", class: "btn btn-default btn-primary" ,style: " border: none; background-color: #000000 ; color: #FFFFFF;"