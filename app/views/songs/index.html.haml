.container.bg-light
  .col-md-12.text-center
    .jumbotron.text-center
      %h1=t('.title') 
      %p=t('.description') 
    %h1 Song

.container.bg-light
  .col-md-12.text-left

    %table.table.table-dark
      %thead
        %tr
          %th Artist
          %th Name
          %th Album
          %th Duration
          %th
          %th
          %th
          %th

      %tbody
        - @songs.each do | song|
          %tr
            %td= song.artist.name
            %td= song.name
            %td= song.album
            %td= song.duration
            %td= link_to 'Add to Playlist',new_list_song_path(song_id: song),id: 'linkcolorwhite'

            %td= link_to 'Details', song,id: 'linkcolorwhite'
            %td= link_to 'Edit', edit_song_path(song),id: 'linkcolorwhite'
            %td= link_to 'Delete', song, method: :delete, data: { confirm: 'Are you sure?' },id: 'linkcolorwhite'
         
  
  .col-xl-12.text-center
    %a.btn.btn-secondary.btn-lg.active{"aria-pressed" => "true", :href => artists_path, :role => "button",:style => " background-color: #000000 ; color: #FFFFFF; "} Add New Song

