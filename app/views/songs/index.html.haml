%h1 Listing songs

%table
  %thead
    %tr
      %th Artist
      %th Name
      %th Album
      %th Duration
      %th
      %th
      %th

  %tbody
    - @songs.each do |song|
      %tr
        %td= song.artist.name
        %td= song.name
        %td= song.album
        %td= song.duration
        %td= link_to 'Show', song
        %td= link_to 'Edit', edit_song_path(song)
        %td= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Song', new_song_path
