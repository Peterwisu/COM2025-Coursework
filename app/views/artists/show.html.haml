
.container.bg-light
  .col-md-12.text-center
    %p

      %h1= @artist.name
    %p
      %b Genres:
      = @artist.genres

      %b Country:
      = @artist.country

      %b  Since:
      = @artist.active





.container.bg-light
  .col-md-12.text-left
    %h4{style: "text-align: left;"} Songs:
    %table.table.table-dark
      %tbody
      %thead
        %tr
          %th Name
          %th Album
          %th Duration
          %th
          %th
          %th
          %th
          %th
        - @artist.songs.each do |song|
          %tr
            %td= song.name
            %td= song.album
            %td= song.duration
            %td= link_to 'Add to Playlist',new_list_song_path(song_id: song),id: 'linkcolorwhite'
            %td= link_to 'Details', song,id: 'linkcolorwhite'
            %td= link_to 'Edit', edit_song_path(song),id: 'linkcolorwhite'
            %td= link_to 'Delete', song , :method => :delete, :data => { :confirm => 'Are you sure?' },id: 'linkcolorwhite'

.container.bg-light
  .col-md-12.text-center

    %a.btn.btn-secondary.btn-lg.active{"aria-pressed" => "true", :href =>  new_song_path(artist_id: @artist), :role => "button",:style => " background-color: #000000 ; color: #FFFFFF; "} Add Song

    %a.btn.btn-secondary.btn-lg.active{"aria-pressed" => "true", :href =>  edit_artist_path, :role => "button",:style => " background-color: #000000 ; color: #FFFFFF; "} Edit

    %a.btn.btn-secondary.btn-lg.active{"aria-pressed" => "true", :href => artists_path, :role => "button",:style => " background-color: #000000 ; color: #FFFFFF; "} Back
