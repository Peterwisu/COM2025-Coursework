.container.bg-light
  .col-md-12.text-center
    .jumbotron.text-center
      %h1=t('.title') 
      %p=t('.description') 
    %h1 Artists 

.container.bg-light
  .col-md-12.text-left

  %table.table.table-dark
    %thead
      %tr
        %th Name
        %th Genres
        %th Country
        %th Active
        %th
        %th
        %th

    %tbody
      - @artists.each do |artist|
        %tr
          %td= artist.name
          %td= artist.genres
          %td= artist.country
          %td= artist.active
          %td= link_to 'Add Song', new_song_path(artist_id: artist),id: 'linkcolorwhite'
          %td= link_to 'Details', artist,id: 'linkcolorwhite'
          %td= link_to 'Edit', edit_artist_path(artist),id: 'linkcolorwhite'
          %td= link_to 'Delete', artist, method: :delete, data: { confirm: 'Are you sure?' },id: 'linkcolorwhite'

%br


