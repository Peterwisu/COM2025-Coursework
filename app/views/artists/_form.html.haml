

= form_for @artist, :html => {:class => "form-horizontal center"} do |f|
  - if @artist.errors.any?
    #error_explanation
      %h2= "#{pluralize(@artist.errors.count, "error")} prohibited this artist from being saved:"
      %ul
        - @artist.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.label :name, "Artist Name:", class: "col-md-4 control-label"
    .col-md-3
      = f.text_field :name, class: "form-control"
  
  .form-group
    = f.label :genres, "Genres:", class: "col-md-4 control-label"
    .col-md-3
      = f.text_field :genres, class: "form-control"
  .form-group
    = f.label :country, "Country:", class: "col-md-4 control-label"
    .col-md-3
      = f.text_field :country, class: "form-control"
  .form-group
    = f.label :active, "Active Since:", class: "col-md-4 control-label"
    .col-md-3
      .col-sm-6.text-center
        = f.date_select :active,{:order => [:day, :month, :year], :start_year => 1800, :end_year => 2021}, {class: "form-control" }
    
      
  .container.bg-light
    .col-md-6.text-center
      = f.submit "Save", class: "btn btn-default btn-primary" ,style: " border: none; background-color: #000000 ; color: #FFFFFF;"